<!DOCTYPE html>
<html>
  <head>
  
    <title>BlogApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    

<nav class="navbar navbar-expand-lg navbar-light bg-light" id="navdiscription">
  <a class="navbar-brand"  href="/">Testblog</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item active" >
        <a class="nav-link" href="/welcome/about">AboutApp<span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item ">
          <a class="nav-link" href="#">Profile</a>

      <li class="nav-item " id="newblogbutton">
         <a class="nav-link" href="/createblogpost/postit">Newpost</a>
      </li>
      <li id="logoutbutton">
          <% if user_signed_in? %>
           <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "btn btn-success") %>
           <% else %> 
             <li>
               <%= link_to('Login', new_user_session_path)  %>  
              </li>  <!--this will checks the user sign in or not and pass -->
           <%end%>
      </li>
      


    </ul>
  </div>
</nav>

      

    <!--added by me for notice and alert -->
      <% if notice %>
           <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
          <p class="alert alert-danger"><%= alert %></p>
      <% end %>
        <%= yield %>
  </body>
</html>
